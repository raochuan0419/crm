    select *
    from t_user where user_name=#{username};
  </select>
  <select id="queryAllSales" resultType="java.util.Map">
      SELECT
        u.id,
        u.user_name AS uname
      FROM
        t_user u
        LEFT JOIN t_user_role ur ON u.id = ur.user_id
        LEFT JOIN t_role r ON ur.role_id = r.id
      WHERE
        u.is_valid = 1
        AND r.is_valid = 1
        AND r.id = 2
    </select>
  <select id="selectByParams" resultType="com.yjx.crm.bean.User" parameterType="com.yjx.crm.query.UserQuery">
    select
    <include refid="Base_Column_List"/>
    from t_user
    <where>
      is_valid=1
      <if test="null !=userName and userName !=''">
        and user_name like concat('%',#{userName},'%')
      </if>
      <if test="null !=phone and phone !=''">
        and phone =#{phone}
      </if>
      <if test="null !=email and email !=''">
        and email =#{email}
      </if>
    </where>
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
